{
  "name": "roast-spotify-backend",
  "type": "module",
  "scripts": {
    "dev": "dotenv -e .env -- serverless offline start --stage dev",
    "deploy": "dotenv -e .env -- serverless deploy --stage prod",
    "deploy:dev": "dotenv -e .env -- serverless deploy --stage dev",
    "remove:dev": "dotenv -e .env -- serverless remove --stage dev",
    "remove:prod": "dotenv -e .env -- serverless remove --stage prod",
    "build": "bun run tsc",
    "test:roast": "bun run test-roast.ts",
    "install": "bun install",
    "local": "bun run dev",
    "db:init": "node scripts/init-database.js",
    "db:monitor": "node scripts/monitor-free-tier.js",
    "db:test": "node test-rds-connection.js",
    "deploy:full": "bun run deploy:dev && echo 'Waiting for RDS...' && sleep 30 && bun run db:init"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.0.0",
    "@aws-sdk/client-cloudwatch": "^3.0.0",
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/client-rds": "^3.0.0",
    "@aws-sdk/lib-dynamodb": "^3.0.0",
    "dotenv": "^16.0.0",
    "mysql2": "^3.6.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/node": "^24.3.0",
    "@types/uuid": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "serverless": "^3.38.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-esbuild": "^1.52.1",
    "serverless-offline": "^13.0.0",
    "typescript": "^5.5.4"
  }
}
